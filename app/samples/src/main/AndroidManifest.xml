<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.sygic.samples">

    <application
        android:allowBackup="false"
        android:fullBackupContent="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">

        <activity
            android:name="com.sygic.samples.app.activities.SamplesActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".browsemap.BrowseMapDefaultActivity"
            android:label="@string/browse_map_default"
            android:theme="@style/AppTheme.NoExitAnimation" />
        <activity
            android:name=".browsemap.BrowseMapFullActivity"
            android:label="@string/browse_map_full"
            android:theme="@style/AppTheme.NoExitAnimation" />
        <activity
            android:name=".browsemap.BrowseMapModesActivity"
            android:label="@string/browse_map_modes"
            android:theme="@style/AppTheme.NoExitAnimation" />
        <activity
            android:name=".browsemap.BrowseMapClickListenerActivity"
            android:label="@string/browse_map_click_listener"
            android:theme="@style/AppTheme.NoExitAnimation" />
        <activity
            android:name=".browsemap.BrowseMapMarkersActivity"
            android:label="@string/browse_map_markers"
            android:theme="@style/AppTheme.NoExitAnimation" />
        <activity
            android:name=".browsemap.BrowseMapThemesActivity"
            android:label="@string/browse_map_themes"
            android:theme="@style/AppTheme.NoExitAnimation" />
        <activity
            android:name=".browsemap.BrowseMapDetailsWindowActivity"
            android:label="@string/browse_map_details_window"
            android:theme="@style/AppTheme.NoExitAnimation" />
        <activity
            android:name=".browsemap.BrowseMapSplitActivity"
            android:label="@string/browse_map_split"
            android:theme="@style/AppTheme.NoExitAnimation" />

        <activity
            android:name=".search.SearchDefaultActivity"
            android:label="@string/search_default"
            android:theme="@style/AppTheme.NoExitAnimation"
            android:windowSoftInputMode="stateVisible|adjustPan" />
        <activity
            android:name=".search.SearchFromBrowseMapActivity"
            android:label="@string/search_from_browse_map"
            android:theme="@style/AppTheme.NoExitAnimation" />
        <activity
            android:name=".search.SearchFromBrowseMapWithPinsActivity"
            android:label="@string/search_from_browse_map_pins"
            android:theme="@style/AppTheme.NoExitAnimation" />
        <activity
            android:name=".search.SearchPreFilledInputActivity"
            android:label="@string/search_pre_filled_input"
            android:theme="@style/AppTheme.NoExitAnimation"
            android:windowSoftInputMode="stateVisible|adjustPan" />

        <activity
            android:name=".navigation.NavigationDefaultActivity"
            android:label="@string/navigation_default"
            android:theme="@style/AppTheme.NoExitAnimation" />
        <activity
            android:name=".navigation.NavigationPreviewEnabledActivity"
            android:label="@string/navigation_preview_enabled"
            android:theme="@style/AppTheme.NoExitAnimation" />
        <activity
            android:name=".navigation.NavigationSimplifiedSignpostActivity"
            android:label="@string/navigation_simplified_signpost"
            android:theme="@style/AppTheme.NoExitAnimation" />
        <activity
            android:name=".navigation.NavigationInfobarCustomClickListenerActivity"
            android:label="@string/navigation_infobar_custom_click_listener"
            android:theme="@style/AppTheme.NoExitAnimation" />

        <meta-data
            android:name="@string/com_sygic_api_key"
            android:value="${sygicApiKey}" />

    </application>

</manifest>
