<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="adapter"
            type="com.sygic.maps.offlinemaps.adapter.MapListAdapter" />
        <variable
            name="viewModel"
            type="com.sygic.maps.offlinemaps.installed.InstalledMapsViewModel" />
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/appToolbar"
                style="@style/ToolbarTheme"
                app:navigationIcon="@drawable/ic_back"
                app:navigationOnClickListener="@{() -> viewModel.onNavigationClick()}"
                app:onMenuItemClickListener="@{viewModel}"
                app:menu="@menu/menu_installed_maps"
                app:title="@string/installed_maps_title"
                tools:subtitle="Installed: 3" />

            <com.google.android.material.progressindicator.ProgressIndicator
                android:id="@+id/progressIndicator"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.ProgressIndicator.Linear.Indeterminate"
                app:indicatorColor="?attr/colorPrimary"
                app:indicatorType="linear" />

            <ViewAnimator
                android:id="@+id/listFlipper"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/installedMapList"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    app:mapAdapter="@{adapter}"
                    app:mapHandler="@{viewModel}"
                    tools:listitem="@layout/map_item_layout"
                    tools:itemCount="3" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/noMapsText"
                    style="@style/TextAppearance.MaterialComponents.Headline4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:text="@string/no_maps_installed"
                    android:visibility="gone" />

            </ViewAnimator>
        </LinearLayout>

        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:id="@+id/downloadMapsFab"
            style="@style/FabTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:layout_gravity="bottom|end"
            android:contentDescription="@string/download_maps"
            android:text="@string/download_maps"
            android:onClick="@{() -> viewModel.onDownloadMapsClicked()}"
            app:icon="@drawable/ic_get_app" />

    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>
